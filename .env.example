# Environment Variables - Firebase Configuration (Frontend)
# Copy this file to .env.development and fill with your Firebase project credentials
# Get these values from: https://console.firebase.google.com/

VITE_FIREBASE_API_KEY=your-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# Master Admin API Key (used to create subscriptions from master panel)
VITE_MASTER_API_KEY=your-master-api-key-here

# ==================== SERVER SIDE (Netlify Functions) ====================
# These are NOT exposed to the frontend â€” only used by Netlify Functions

# Firebase Admin SDK (generate from Firebase Console > Project Settings > Service Accounts)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Asaas API
ASAAS_API_KEY=your-asaas-api-key
ASAAS_SANDBOX=true
ASAAS_WEBHOOK_TOKEN=your-webhook-secret-token

# Asaas Split Wallets (partner sub-account IDs)
ASAAS_WALLET_ABIMAEL=wallet-id-abimael
ASAAS_WALLET_MARCUS=wallet-id-marcus

# Master API Key (same as VITE_MASTER_API_KEY, used server-side)
MASTER_API_KEY=your-master-api-key-here
